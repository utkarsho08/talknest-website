{
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/users/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/posts/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/topics/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}