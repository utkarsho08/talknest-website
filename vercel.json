{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/users/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/posts/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/topics/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)\\.html",
            "dest": "/public/$1.html"
        },
        {
            "src": "/(.*)\\.(css|js|png|jpg|gif|svg)",
            "dest": "/public/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html"
        }
    ]
}